@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Reenviar confirmación de correo";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6 d-flex justify-content-center align-items-center" style="background-color: #0083c5; height: 100vh;">
            <div class="text-white text-center">
                <h2>¿No recibiste el correo de confirmación?</h2>
                <p>Ingresa tu correo electrónico para reenviar el mensaje de confirmación.</p>
            </div>
        </div>

        <div class="col-md-6 d-flex justify-content-center align-items-center">
            <section>
                <form method="post" class="p-4 border rounded shadow-lg" style="width: 400px;">
                    <h2 class="text-center">Reenviar confirmación de correo</h2>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger" role="alert"></div>
                    <div class="form-group mb-3">
                        <label asp-for="Input.Email" class="form-label">Correo electrónico</label>
                        <input asp-for="Input.Email" class="form-control" placeholder="name@example.com" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div>
                        <button type="submit" class="w-100 btn btn-primary">Reenviar</button>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
