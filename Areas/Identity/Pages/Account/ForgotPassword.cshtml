@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "¿Olvidaste tu contraseña?";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center"><i class=" 	fas fa-cogs"></i> @ViewData["Title"]</h1>
            <p class="text-center text-muted">Por favor, introduce tu dirección de correo electrónico para restablecer tu contraseña.</p>
            <hr />

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                <!-- Campo de entrada para el correo con icono -->
                <div class="input-group mb-4">
                    <span class="input-group-text bg-white"><i class="fas fa-envelope"></i></span>
                    <div class="form-floating flex-grow-1">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email">Correo electrónico</label>
                    </div>
                </div>
                <span asp-validation-for="Input.Email" class="text-danger"></span>

                <!-- Botón de restablecer contraseña -->
                <button type="submit" class="w-100 btn btn-lg btn-primary mt-3">
                    <i class="accordion-body fa-cogs"></i> Restablecer Contraseña
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

